<p id="notice"><%= notice %></p>

<%= form_tag restaurants_path, :method => :get do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search for restaurants" %>
<% end %>


<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.address %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restaurant_path %>


<% my_url = "http://maps.google.com/maps/api/staticmap?size=800x500&zoom=5" %>
<% @restaurants.each do |restaurant| %>
<% my_url += "&markers=#{restaurant.latitude}%2C#{restaurant.longitude}&key=YOUR_API_KEY"%>
<% end %>
<%= image_tag my_url %>


